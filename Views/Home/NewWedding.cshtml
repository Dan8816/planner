<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Wedding Planner</title>
    @model Planner.Models.NewWedding
</head>
<body>
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <span class="navbar-brand">Wedding Planner</span>
        <h3>Plan Your Wedding</h3>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class='nav-link' href="/logout">Logout</a>
            </li>
        </ul>
    </nav><br>
    <table>
        <form class="form" asp-action="CreateWedding" asp-controller="Home" method="post">
            <tr>
                <td><label asp-for="WedderOne">Wedder One:</label></td>
                <td><input asp-for="WedderOne" type="text" name="WedderOne"></td>
                <td><span asp-validation-for="WedderOne"></span></td>
            </tr>
            <tr>
                <td><label asp-for="WedderTwo">Wedder Two:</label></td>
                <td><input asp-for="WedderTwo" type="text" name="WedderTwo"></td>
                <td><span asp-validation-for="WedderTwo"></span></td>
            </tr>
            <tr>
                <td><label asp-for="WeddingDate">Date:</label></td>
                <td><input asp-for="WeddingDate" type="date" name="WeddingDate"></td>
                <td><span asp-validation-for="WeddingDate"></span></td>
            </tr>
            <tr>
                <td><label asp-for="WeddingStrAdd">WeddingStrAdd:</label></td>
                <td><input asp-for="WeddingStrAdd" type="text" name="WeddingStrAdd"></td>
                <td><span asp-validation-for="WeddingStrAdd"></span></td>
            </tr>
            <tr>
                <td><button class="btn btn-success">Create</button></td>
            </tr>
        </form>
    </table>
</body>
</html>